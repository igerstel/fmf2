<h1>Listing farms</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Zip</th>
    <th>Farmer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @farms.each do |farm| %>
  <tr>
    <td><%= farm.address %></td>
    <td><%= farm.zip %></td>
    <td><%= farm.farmer.name %></td>
    <td><%= link_to 'Show', farm %></td>
    <td><%= link_to 'Edit', edit_farm_path(farm) %></td>
    <td><%= link_to 'Destroy', farm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

